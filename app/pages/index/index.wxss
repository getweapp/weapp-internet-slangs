.section-entry {
  margin-bottom: 16px;
  padding: 16px;
  color: #ffffff;
  background-attachment: scroll;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  text-align: center;
  border-radius: 4px;
  box-shadow: 0 8px 16px rgba(0, 0, 0, .1);
}
.section-entry:active {
  box-shadow: 0 4px 16rpx rgba(0, 0, 0, .1);
}
.section-speak {
  overflow: hidden;
  font-size: 12px;
  font-weight: 400;
  line-height: 1.5;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.section-title {
  overflow: hidden;
  font-size: 24px;
  font-weight: 600;
  line-height: 1.5;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.entry-meta {
  margin-bottom: 4px;
  text-align: center;
  color: #b0bec5;
  font-size: 12px;
}
